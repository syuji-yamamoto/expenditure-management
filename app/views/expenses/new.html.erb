<h1>支出登録</h1>
<%= form_with model: @expense, local: true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
	<div class="row">
		<div class="col s2">
			<div class="list-items">費目</div>
			<%= f.collection_select :expense_item_id, ExpenseItem.all, :id, :name, { prompt: "選択してください" }, { class: "select-item" } %>
		</div>
	</div>
	<div class="row">
		<div class="input-field col s6">
			<%= f.text_field :price, id: "input_text" %>
			<%= f.label :price, id: "input_text" %>
		</div>
	</div>
	<div class="row">
		<div class="input-field col s6">
			<%= f.text_area :memo, id: "textarea2", class: "materialize-textarea" %>
			<%= f.label :memo, for: "textarea2" %>
		</div>
	</div>
	<div class="input-field col s6">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
