<h1>収入編集</h1>
<%= form_with model: @income, method: :patch, local: true do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
	<div class="row">
		<div class="col s12">
			<div class="row">
				<div class="input-field col s6">
					<div class="list-items" style="color: #9e9e9e;">費目</div>
					<%= f.text_field :expense_item, id: "input_text" %>
				</div>
			</div>
			<div class="row">
				<div class="input-field col s6">
					<div class="list-items" style="color: #9e9e9e;">金額</div>
					<%= f.text_field :price, id: "input_text" %>
				</div>
			</div>
			</div>
			<div class="row">
				<div class="input-field col s12">
					<div class="list-items" style="color: #9e9e9e;">メモ</div>
					<%= f.text_area :memo, id: "textarea2", class: "materialize-textarea" %>
				</div>
			</div>
		</div>
	</div>
	<div class="input-field col s6">
    <%= f.submit "編集" %>
  </div>
<% end %>