<h4><%= @income.user.nickname %>さん</h4>
<h5><%= @income.created_at.strftime("%Y年%m月%d日") %>の支出詳細</h5>
<div class="row">
	<div class="col s12 m6">
		<div class="card blue-grey lighten-5">
			<div class="card-content black-text">
				<span class="card-title">登録日:<%= @income.created_at.strftime("%Y年%m月%d日") %></span>
				<span class="card-title">登録者:<%= @income.user.nickname %></span>
				<span class="card-title">費目:<%= @income.expense_item %></span>
				<span class="card-title">金額:¥<%= @income.price %></span>
				<span class="card-title">メモ:<%= @income.memo %></span>
			</div>
			<div class="card-action">
				<%= link_to "編集", edit_income_path(@income.id) %>
				<%= link_to "削除", income_path(@income.id), method: :delete %>
			</div>
		</div>
	</div>
</div>